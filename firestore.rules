
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Pengguna hanya dapat membaca/menulis data mereka sendiri.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Siapa pun yang terautentikasi dapat membaca pengaturan permainan.
    // Hanya admin yang bisa menulisnya (ditegakkan oleh logika sisi server/klien,
    // aturan ini adalah lapisan pertahanan dasar).
    match /game-settings/{docId} {
        allow read: if request.auth != null;
        allow write: if false; // Perubahan pada pengaturan harus dilakukan melalui fungsi admin yang aman.
    }
    
    // Aturan untuk koleksi judul
    match /titles/{titleId} {
        allow read: if request.auth != null;
        allow write: if false; // Hanya admin yang dapat mengubah melalui UI admin
    }
    
    // Aturan untuk aliansi
    match /alliances/{allianceId} {
        allow read: if request.auth != null;
        // Penulisan (pembuatan/pembaruan) akan ditangani oleh logika sisi klien
        // yang seharusnya sudah memiliki validasi peran admin.
        allow write: if request.auth != null; 
    }
    
    // Aturan untuk suara
    match /votes/{userId} {
      // Seorang pengguna dapat memberikan atau mengubah suara mereka sendiri.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Aturan untuk antrian konstruksi dan pelatihan
    match /constructionQueue/{jobId} {
        allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /trainingQueue/{jobId} {
        allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /attackQueue/{jobId} {
        allow read, write: if request.auth != null && request.resource.data.attackerId == request.auth.uid;
    }
     match /returnQueue/{jobId} {
        allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    match /transportQueue/{jobId} {
         allow read, write: if request.auth != null && (request.resource.data.senderId == request.auth.uid || request.resource.data.recipientId == request.auth.uid);
    }
    
    // Laporan hanya dapat diakses oleh pengguna yang terlibat
    match /reports/{reportId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.involvedUsers;
      allow write: if false; // Laporan dibuat oleh sistem, tidak oleh klien
    }
    
    // Perang dapat dibaca oleh siapa saja yang terautentikasi
    match /wars/{warId} {
        allow read: if request.auth != null;
        allow write: if false; // Hanya admin yang dapat mengelola perang
    }

    // Log aktivitas tidak boleh bisa diubah oleh klien
    match /activityLog/{logId} {
        allow read: if request.auth != null;
        allow write: if false;
    }

  }
}
