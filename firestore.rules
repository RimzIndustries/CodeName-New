rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Pengguna dapat membaca/menulis dokumen mereka sendiri
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Izinkan semua pengguna yang terautentikasi untuk membaca pengaturan permainan
    match /game-settings/{document=**} {
      allow read: if request.auth != null;
    }

    // Koleksi lain (seperti judul, aliansi, dll.) dapat dibaca oleh semua pengguna yang terautentikasi
    match /{collection}/{docId} {
        allow read: if request.auth != null;
        // Aturan tulis yang lebih spesifik mungkin diperlukan di sini di masa mendatang
    }
  }
}
